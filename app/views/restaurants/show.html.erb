<h1>Name: <%=@restaurant.name%></h1>
<p>Address: <%= @restaurant.address%></p>
<p>Phone: <%=@restaurant.phone_number%></p>
<p>Category: <%=@restaurant.category%></p>
<hr>

<% @restaurant.reviews.each_with_index do |review, index|%>
<p><%= index + 1%>: <b>Text:</b> <%=review.content%> <b>Rating: </b><%= review.rating%></p>
<% end %>
<hr>

<p><%= link_to 'Add a review for this restaurant', new_restaurant_review_path(@restaurant)%></p>
<p><%= link_to 'All restaurants', restaurants_path %></p>
